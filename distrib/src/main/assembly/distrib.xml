<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>distrib</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>

        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>config/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>0777</fileMode>
        </fileSet>

        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>driver/*</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>0777</fileMode>
        </fileSet>

        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>/samples</outputDirectory>
            <includes>
                <include>samples/*</include>
            </includes>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/web-apps</outputDirectory>
            <includes>
                <include>${project.groupId}:ui-monitoring-server</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>${project.groupId}:ui-monitoring-cmdline</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/samples</outputDirectory>
            <includes>
                <include>${project.groupId}:ui-materials-resources-website-ref</include>
                <include>${project.groupId}:ui-materials-resources-website-new</include>
                <include>${project.groupId}:ui-materials-resources-page-ref</include>
                <include>${project.groupId}:ui-materials-resources-page-new-look</include>
                <include>${project.groupId}:ui-materials-resources-page-new-layout</include>
                <include>${project.groupId}:ui-materials-resources-page-new-content</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>