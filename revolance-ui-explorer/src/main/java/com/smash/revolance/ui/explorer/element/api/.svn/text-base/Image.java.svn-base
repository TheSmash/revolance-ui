package ets.bour.revolance.element.api;

import ets.bour.revolance.element.IPageElement;
import ets.bour.revolance.page.IPage;
import org.openqa.selenium.WebElement;

/**
 * User: ebour
 * Date: 02/02/13
 * Time: 08:12
 */
public class Image extends PageElement
{
    public Image(IPage page, WebElement element)
    {
        super( page, element );
        setImg( element.getCssValue( "background" ) );
    }

    @Override
    public boolean equals(IPageElement element) throws Exception
    {
        return element.isAlike( element );
    }

    public static boolean isImage(WebElement element)
    {
        return PageElement.isVisible( element ) &&
                ( !element.getCssValue( "background-image" ).isEmpty() || element.getTagName().contentEquals( "img" ) );
    }

}
